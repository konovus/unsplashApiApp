<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="Photo"
            type="com.konovus.unsplashapiapp.models.Photo" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/_100sdp"
            android:maxHeight="@dimen/_400sdp"
            android:scaleType="center"
            android:imageURL="@{Photo.urls.thumb}"
            app:riv_corner_radius="@dimen/_5sdp"
            android:layout_alignParentTop="true"/>

        <com.makeramen.roundedimageview.RoundedImageView
            android:visibility="gone"
            android:id="@+id/cover"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/colorCover"
            android:minHeight="@dimen/_100sdp"
            android:maxHeight="@dimen/_400sdp"
            app:riv_corner_radius="@dimen/_5sdp"
            android:layout_alignTop="@id/photo"
            android:layout_alignBottom="@id/photo"
            android:layout_alignStart="@id/photo"
            android:layout_alignEnd="@id/photo"/>


        <ImageView
            android:visibility="gone"
            android:id="@+id/download_btn"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_32sdp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/centerPoint"
            app:riv_corner_radius="@dimen/_10sdp"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/ic_arrow_download"
            android:tint="@color/colorIcons"
            android:background="@drawable/icons_bg_shape"/>

        <TextView
            android:id="@+id/centerPoint"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:layout_centerInParent="true"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/photo"
            android:layout_marginBottom="@dimen/_1sdp"
            android:layout_centerHorizontal="true">
            <ProgressBar
                android:visibility="gone"
                android:id="@+id/progress_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:indeterminateOnly="false"
                android:progressDrawable="@drawable/circle"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/progress_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/ubuntu_medium"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintTop_toTopOf="@id/progress_download"
                app:layout_constraintBottom_toBottomOf="@id/progress_download"
                app:layout_constraintLeft_toLeftOf="@id/progress_download"
                app:layout_constraintRight_toRightOf="@id/progress_download"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <ImageView
            android:visibility="gone"
            android:id="@+id/like_btn"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_32sdp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_toLeftOf="@id/centerPoint"
            app:riv_corner_radius="@dimen/_10sdp"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/ic_favorite"
            android:tint="@color/colorIcons"
            android:background="@drawable/icons_bg_shape"/>
        <com.makeramen.roundedimageview.RoundedImageView
            android:visibility="gone"
            android:id="@+id/profile_img"
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_32sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:imageURL="@{Photo.user.profileImage.small}"
            android:layout_margin="@dimen/_24sdp"
            app:riv_corner_radius="@dimen/_50sdp"
            android:backgroundTint="@color/colorIcons"/>


        <TextView
            android:visibility="gone"
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="@dimen/_18ssp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{Photo.user.username}"
            app:layout_constraintStart_toEndOf="@id/profile_img"
            app:layout_constraintBottom_toBottomOf="@id/profile_img"/>


    </RelativeLayout>
</layout>