<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="Photo"
            type="com.konovus.unsplashapiapp.models.Photo" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp">

        <ImageView
            android:id="@+id/photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/_100sdp"
            android:maxHeight="@dimen/_400sdp"
            android:scaleType="center"
            android:imageURL="@{Photo.urls.thumb}"
            android:background="@drawable/photo_details_shape"
            android:layout_alignParentTop="true"
            android:transitionName="shared_transition"/>

        <com.makeramen.roundedimageview.RoundedImageView
            android:visibility="gone"
            android:id="@+id/cover"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/colorCover"
            android:minHeight="@dimen/_100sdp"
            android:maxHeight="@dimen/_400sdp"
            app:riv_corner_radius="@dimen/_5sdp"
            android:layout_alignTop="@id/photo"
            android:layout_alignBottom="@id/photo"
            android:layout_alignStart="@id/photo"
            android:layout_alignEnd="@id/photo"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/photo"
            android:layout_marginBottom="@dimen/_1sdp"
            android:layout_centerHorizontal="true">
            <ProgressBar
                android:visibility="gone"
                android:id="@+id/progress_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:indeterminateOnly="false"
                android:progressDrawable="@drawable/circle"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/progress_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/ubuntu_medium"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintTop_toTopOf="@id/progress_download"
                app:layout_constraintBottom_toBottomOf="@id/progress_download"
                app:layout_constraintLeft_toLeftOf="@id/progress_download"
                app:layout_constraintRight_toRightOf="@id/progress_download"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>
</layout>